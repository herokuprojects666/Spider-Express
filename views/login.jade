extend layout
block page
  - var menu = 'login'
block gameboard
  div.col-md-4.col-md-offset-4.error= error
  div.col-md-4.col-md-offset-4
    h2 Sign in
      form(action='/login', method='POST')
        p
          input.form-control(name='email', type='text', placeholder='user@webhost.com')
        p 
          input.form-control(name='password', type='password', placeholder='********')
        p  
          button.btn.btn-lg.btn-primary(type='submit') Log In
  
  div.col-md-4.col-md-offset-4
    p Don't have an account? Create an account 
      a(href="/create") here        