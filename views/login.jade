extend layout
block page
  - var menu = 'login'
block gameboard
  div.row
    div.col-md-4.col-md-offset-1.error= error
  div.row
    div.col-md-4.col-md-offset-1
      h2.message Sign in
        p
          form(action='/login', method='POST')
            p
              input.form-control(name='email', type='text', placeholder='Email')
            p 
              input.form-control(name='password', type='password', placeholder='********')
            p  
              button.btn.btn-lg.btn-primary(type='submit') Log In
  div.row
    div.col-md-4.col-md-offset-1
      p.message Don't have an account? Create an account 
        a.link(href="/create") here        