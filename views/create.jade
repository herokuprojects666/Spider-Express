extend layout
block page
- var menu = 'create'
block gameboard
  div.row
    div.col-md-4.col-md-offset-1
      h2.message Create Account
      form(action='/create', method='POST')
        p
          input.form-control(name="email", type="text", placeholder="Email")
        p
          input.form-control(name="username", type="text", placeholder="Username")
        p
          input.form-control(name="password", type="password", placeholder="*******")
        p
          button.btn.btn-lg.btn-primary(type="submit") Create
  div.row
    div.col-md-4.col-md-offset-1
      p.error= error