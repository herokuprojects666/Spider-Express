extend layout
block page
  - var page = 'logged in'
  - var menu = 'spider'
block gameboard
  div.gameboard(id='#{user.username}')
    div.container-fluid#setup
      div.row#initial
        button.btn.btn-lg.btn-info#new-game New Game
        button.btn.btn-lg.btn-info#load-game Load Game
      div.row#difficulty
        button.btn.btn-lg.btn-info#easy Easy
        button.btn.btn-lg.btn-info#medium Medium
        button.btn.btn-lg.btn-info#hard Hard
    div.container-fluid#other
      div.row#cheating
        button.btn.btn-lg.btn-danger#cheat Cheat
        button.btn.btn-lg.btn-primary#save Save
    div.container-fluid#loading-area
      p
        form
          input.form-control#game(type='text', placeholder='New/Saved Game Slot')
    div.error= error
    div#move-count
      div.row#temp
        div#stats.col-lg-2
          p.moves Move Count : 
          p.count
          p.current_score Score :
          p.score
        div#high_scores.col-lg-3
          div.row
            p#Top Top Scores
          div.row#main_selector
            ul.nav.nav-pills
              li.active#Personal 
                a(href='#') Personal
              li#Global 
                a(href='#') Global
          div.row#sub_selector
            ul.nav.nav-pills
              li.active#Easy
                a(href='#') Easy
              li#Medium
                a(href='#') Medium
              li#Hard
                a(href='#') Hard
        div#data
    div#slider-area

      div#slidden
    br
    div#game-container
      div#deck
      img.dealer(src="/img/Spider/Dealer.jpg")
      div#bottomDeck
      div#finishedStacks.container-fluid
        div.row
         div#stack1
            img#1(src='/img/Spider/finished.gif')
         div#stack2
            img#2(src='/img/Spider/finished.gif')
        div.row
          div#stack3
            img#1(src='/img/Spider/finished.gif')
          div#stack4
            img#2(src='/img/Spider/finished.gif')
        div.row
          div#stack5
            img#1(src='/img/Spider/finished.gif')
          div#stack6
            img#2(src='/img/Spider/finished.gif')        
        div.row
          div#stack7
            img#1(src='/img/Spider/finished.gif')
          div#stack8
            img#2(src='/img/Spider/finished.gif')      
